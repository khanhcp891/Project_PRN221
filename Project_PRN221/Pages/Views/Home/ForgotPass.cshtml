@page "/ForgotPassword"
@model Project_PRN221.Pages.Views.Home.ForgotPassModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title>JSP Page</title>
    <style>
        .forgotPass {
            text-align: center;
        }

        .comment {
            margin: 10px;
            font-size: 20px;
        }

        #submit {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="forgotPass">Forgot Password</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <form method="post" id="passwordForm">
                    <div class="comment">Vui lòng nhập email</div>
                    <input type="text" class="input-lg form-control" name="email" id="email" placeholder="Enter your email" autocomplete="off">
                    <input type="submit" class="col-xs-12 btn btn-primary btn-load btn-lg" id="submit">
                </form>
            </div><!--/col-sm-6-->
        </div><!--/row-->
    </div>
</body>
</html>

