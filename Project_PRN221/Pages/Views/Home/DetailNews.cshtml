@page "/DetailNews/{id:int}"
@model Project_PRN221.Pages.Views.Home.DetailNewsModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>JSP Page</title>
    <style>
        body {
            font-family: Tahoma;
            font-size: 13px;
        }

        #menu_top {
            background: black;
            width: 100%;
            height: 100px;
            padding-bottom: 10px;
        }

        .logo img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            padding-left: 5px;
        }

        .menu li {
            display: inline-block;
            font-size: 25px;
            margin: 30px 30px 30px 30px;
        }

        .search input {
            width: 250px;
            height: 40px;
            padding: 10px;
        }

        .search button {
            background: blue;
            color: white;
            width: 70px;
            height: 40px;
        }

        .search {
            padding-top: 35px;
        }

        #banner img {
            width: 100%;
            height: 500px;
        }

        .khungNews {
            width: 100%;
            border: 1px solid red;
        }

            .khungNews .image img {
                width: 100%;
            }

            .khungNews .news h3 {
                margin-top: 25px;
            }

        #main {
            margin-top: 15px;
        }

            #main h1 {
                font-size: 20px;
                font-weight: bold;
            }

            #main .date {
                background: graytext;
                font-size: 15px;
                color: white;
                margin-left: 85%;
                border: 1px solid gray;
            }

            #main h3 {
                font-weight: bold;
                font-size: 18px;
                color: rgb(146, 134, 134);
            }

            #main .authurName {
                font-size: 15px;
                margin-left: 90%
            }

        #man .keyWord {
            background: grey;
            font-size: 15px;
            color: white;
            margin-top: 50px;
            margin-right: 90%;
            font-size: 15px;
        }

        #main img {
            padding-top: 10px;
            margin-left: 20%;
        }

        }
    </style>
</head>
<body>

    <div class="container">

        <div id="main">
            <h1>@Model.post.Title</h1>
            <h4 class="date">@Model.post.DatePost</h4>
            @foreach (var image in Model.listImage)
            {
                @if (image.PostId == Model.post.IdPost)
                {
                    <img src="/img/@image.Name">
                }
            }
            <p>@Model.post.Concept</p>

            @foreach (var authur in Model.listAuthur)
            {
                @if (authur.IdAuthur == Model.post.IdAuthur)
                {
                    <h5 class="authurName">@authur.AuthurName</h5>
                }
            }
        </div>
    </div>

</body>
</html>